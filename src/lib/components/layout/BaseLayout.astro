---
import "@fontsource-variable/inter";
import "@styles/global.css";
import Meta from "@components/common/Meta.astro";
import Navbar from "@components/navigation/Navbar.astro";
import Footer from "@components/navigation/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="id" class="dark scroll-smooth">
  <head>
    <Meta title={title} description={description} image={image} />
    <slot name="head" />
  </head>
  <body
    class="bg-zinc-950 text-zinc-50 font-sans selection:bg-indigo-500/30 selection:text-indigo-200"
  >
    <div class="relative flex min-h-screen flex-col">
      <Navbar />
      <main class="flex-1 mt-24">
        <slot />
      </main>
      <Footer />
    </div>

    <script>
      import AOS from "aos";
      import "aos/dist/aos.css";

      // Initialize AOS
      const initAOS = () => {
        AOS.init({
          duration: 800,
          easing: "ease-in-out",
          once: true,
          mirror: false,
        });
      };

      // Run on initial load
      initAOS();

      // Run on view transitions navigation (if enabled in future)
      document.addEventListener("astro:page-load", initAOS);

      // Allow re-init from other components
      (window as any).AOS = AOS;
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 238, 71, 100;
    --accent-light: 247, 131, 150;
    --accent-dark: 153, 27, 45;
  }

  body {
    scrollbar-gutter: stable;
  }

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: #09090b;
  }
  ::-webkit-scrollbar-thumb {
    background: #27272a;
    border-radius: 10px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #3f3f46;
  }
</style>
