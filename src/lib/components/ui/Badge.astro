---
interface Props {
  variant?: "default" | "success" | "warning" | "error" | "indigo";
  className?: string;
}

const { variant = "default", className = "" } = Astro.props;

const variants = {
  default: "bg-zinc-800 text-zinc-300 border-2 border-black",
  success: "bg-emerald-500 text-black border-2 border-black",
  warning: "bg-amber-400 text-black border-2 border-black",
  error: "bg-rose-500 text-black border-2 border-black",
  indigo:
    "bg-indigo-500 text-black border-2 border-black shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]",
};
---

<span
  class:list={[
    "inline-flex items-center px-2 py-0.5 text-[10px] font-black uppercase tracking-tighter italic",
    variants[variant],
    className,
  ]}
>
  <slot />
</span>
